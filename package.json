{
  "name": "nodejspocsequelize",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/validator": "^13.7.4",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "node-forge": "^1.2.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.21.3",
    "sequelize-typescript": "^2.1.3",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "27.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "*",
    "@types/supertest": "^2.0.11",
    "babel-jest": "^27.5.1",
    "jest": "27.5.1",
    "request": "^2.88.2",
    "supertest": "^6.2.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "tsc",
    "test": "jest",
    "start": "node ./dist/src/server.js",
    "docker": "npm install && npm run build && npm run start"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ],
    "roots": [
      "tests"
    ]
  }
}
